{
  "name": "backend",
  "packageManager": "yarn@3.2.0",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "17.9.0"
  },
  "scripts": {
    "start": "node --experimental-specifier-resolution=node ./bin/www",
    "dev": "nodemon --exec 'node --experimental-specifier-resolution=node -r dotenv/config ./bin/www'",
    "devdebug": "DEBUG=backend:\\* yarn run dev",
    "test": "NODE_OPTIONS='--experimental-vm-modules --experimental-specifier-resolution=node' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --experimental-specifier-resolution=node' jest --watchAll",
    "test:debug": "NODE_OPTIONS='--inspect-brk --experimental-vm-modules --experimental-specifier-resolution=node' jest --runInBand"
  },
  "type": "module",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest/globals": true
    },
    "extends": [
      "airbnb-base/legacy",
      "prettier"
    ],
    "plugins": [
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ],
      "no-underscore-dangle": "off"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "debug": "^4.3.4",
    "express": "^4.18.0",
    "express-validator": "^6.14.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.1",
    "mongoose-paginate-v2": "^1.6.3",
    "morgan": "^1.10.0",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "dotenv": "^16.0.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "jest": "^28.1.1",
    "mongodb-memory-server": "^8.7.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3"
  }
}
